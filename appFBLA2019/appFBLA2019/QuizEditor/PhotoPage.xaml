<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appFBLA2019.PhotoPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="ic_delete_white_48dp.png" Text="Remove"  Priority="0" Name="Remove" Order="Primary"  Activated="Remove_Activated" />
        <ToolbarItem Icon="ic_insert_photo_white_48dp.png" Text="Change Photo"  Priority="1" Name="ChangePhoto" Order="Primary"  Activated="ChangePhoto_Activated" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="pictureToEdit" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>