<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appFBLA2019.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <Label Text="Enter your Email and we will send you instructions to recover your account." FontSize="Large"/>
            <Entry x:Name="Email" Placeholder="Email"/>
            <Button Text="Continue" Clicked="Button_Clicked" CornerRadius="25"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>