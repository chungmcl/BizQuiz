<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appFBLA2019.QuizEndPage">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,10">
            <Label x:Name="LabelFeedback" FontSize="40" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Gray" />
            <Label x:Name="LabelScore" FontAttributes="Bold" FontSize="100" TextColor="Accent"
                   HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
            <Button x:Name="ButtonShareToFacebook" Text="Share to Facebook" Clicked="ButtonShareToFacebook_Clicked" CornerRadius = "25" BackgroundColor = "Accent" TextColor = "White" />
            <Button x:Name="ButtonShareToOtherMedia" Text="Share to Other Social Media" Clicked="ButtonShareToOtherMedia_Clicked" CornerRadius = "25" BackgroundColor = "Accent" TextColor = "White" />
            <Button x:Name="ButtonDone" Text="Done" Clicked="ButtonDone_Clicked" CornerRadius = "25" BackgroundColor = "Accent" TextColor = "White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>