<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appFBLA2019.TextGame"
             xmlns:local="clr-namespace:appFBLA2019"
             NavigationPage.BackButtonTitle="true">
    <StackLayout x:Name="StackLayoutMain">
        <ProgressBar x:Name="ProgressBar" Progress = "0" ProgressColor="Accent" VerticalOptions="Start" />
        <Label x:Name="LabelQuestion" VerticalOptions="FillAndExpand" FontSize="Large" />
        <Label x:Name="LabelFeedback" VerticalOptions="FillAndExpand" />
        <Image x:Name="QuestionImage" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
        <Grid VerticalOptions="EndAndExpand" x:Name="ButtonGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>
    </StackLayout>
</ContentPage>