<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appFBLA2019.TextGame"
             xmlns:local="clr-namespace:appFBLA2019">
    <StackLayout x:Name="StackLayoutMain">
        <ProgressBar VerticalOptions="Start"/>
        <Label x:Name="LabelQuestion" VerticalOptions="FillAndExpand" FontSize="Large"/>
        <Label x:Name="LabelDebug" VerticalOptions="FillAndExpand"/>
        <Image x:Name="QuestionImage" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
        <Grid HeightRequest="320" VerticalOptions="End" x:Name="GridEntryObjects">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>
    </StackLayout>
</ContentPage>