<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appFBLA2019.TextGame"
             xmlns:local="clr-namespace:appFBLA2019">
    <StackLayout>
        <ProgressBar VerticalOptions="Start"/>
        <Label x:Name="LabelQuestion" VerticalOptions="FillAndExpand"/>
        <Label x:Name="LabelDebug" VerticalOptions="FillAndExpand"/>
        <Grid HeightRequest="320" VerticalOptions="End" x:Name="GridButtons">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="ButtonOptionA" Grid.Column="0" Grid.Row="0" IsEnabled="false" Clicked="ButtonOptionA_Clicked"/>
            <Button x:Name="ButtonOptionB" Grid.Column="1" Grid.Row="0" IsEnabled="false" Clicked="ButtonOptionB_Clicked"/>
            <Button x:Name="ButtonOptionC" Grid.Column="0" Grid.Row="1" IsEnabled="false" Clicked="ButtonOptionC_Clicked"/>
            <Button x:Name="ButtonOptionD" Grid.Column="1" Grid.Row="1" IsEnabled="false" Clicked="ButtonOptionD_Clicked"/>
        </Grid>
    </StackLayout>
</ContentPage>