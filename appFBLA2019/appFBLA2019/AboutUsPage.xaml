<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appFBLA2019.AboutUsPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label FontSize="30" HorizontalOptions="CenterAndExpand">About Us</Label>
            <Frame VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Label VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="18">
                    Bizquiz was developed by Micheal Chung, Eric Hughes, and Thomas Elley for the FBLA Mobile App Development Challenge.
                </Label>
            </Frame>
            <Button x:Name="GithubButton" Text="Check out our Github" VerticalOptions="End" CornerRadius="25" BackgroundColor="Accent" HeightRequest="50" Clicked="GithubButton_Clicked" />
            <Button x:Name="EmailButton" Text="Email us" VerticalOptions="End" CornerRadius="25" BackgroundColor="Accent" HeightRequest="50" Clicked="EmailButton_Clicked" />
            <Button x:Name="FacebookButton" Text="See us on Facebook" VerticalOptions="End" CornerRadius="25" BackgroundColor="Accent" HeightRequest="50" Clicked="FacebookButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>