<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:appFBLA2019"
    x:Class="appFBLA2019.MainPage"
    Title="BizQuiz"
    BarBackgroundColor="#004f96"
    BarTextColor="White"
    x:Name="TabbedPagePage"
    CurrentPageChanged="TabbedPage_CurrentPageChanged">
    <TabbedPage.ToolbarItems>
        <ToolbarItem Icon="ic_help_black_48dp.png" Order="Secondary"  Priority="0" Text="Help" Clicked="TutorialButton_Clicked" x:Name="TutorialButton" />
    </TabbedPage.ToolbarItems>

    <local:LevelCategoriesPage x:Name="levelsPage" Title="Standard Levels" Icon="ic_landscape_black_48dp.png" />
    <local:LevelEditorPage Title="Level Editor" Icon="ic_edit_black_48dp.png" />
    <ContentPage Title="Leaderboards" Icon="ic_group_black_48dp.png" />
    <local:ProfilePage Title="Profile" Icon="ic_person_black_48dp.png" />
    <TabbedPage.ToolbarItems>
        <ToolbarItem x:Name="AboutPageToolbarItem" Text="About Bizquiz" Clicked="AboutPageToolbarItem_Clicked" Order="Secondary" />
        <ToolbarItem x:Name="BugReportToolbarItem" Text="Report a problem" Clicked="BugReportToolbarItem_Clicked" Order="Secondary" />
    </TabbedPage.ToolbarItems>
</TabbedPage>