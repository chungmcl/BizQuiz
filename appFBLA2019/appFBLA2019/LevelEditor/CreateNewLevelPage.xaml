<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appFBLA2019.CreateNewLevelPage"
             Title="BizQuiz">

    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="ic_done_white_48dp.png"  Priority="0" Name="Done" Order="Primary"  Activated="ButtonCreateLevel_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Label Text="Create Your Own Quiz"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"
                        FontAttributes="bold"
                        FontSize="40"/>
            <Entry x:Name="EntryLevelName"  Placeholder="Level Name"/>
            <ScrollView BackgroundColor="White" VerticalOptions="FillAndExpand" x:Name ="ScrollViewQuestions">
                <StackLayout x:Name="stkMain">
                    <StackLayout x:Name="StackLayoutQuestionStack" Padding="10" />
                    <!--Things added in code-->
                </StackLayout>
            </ScrollView>
            <Button x:Name="ButtonAddQuestion" Image="ic_add_white_48dp" HorizontalOptions="End" VerticalOptions="End" Clicked="ButtonAddQuestion_Clicked" HeightRequest="40" WidthRequest="40" CornerRadius="20" Margin="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>