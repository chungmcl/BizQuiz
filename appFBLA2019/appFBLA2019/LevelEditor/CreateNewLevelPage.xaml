<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appFBLA2019.CreateNewLevelPage"
             Title="BizQuiz">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Label Text="Create Your Own Quiz"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"
                        FontAttributes="bold"
                        FontSize="40"/>
            <Entry x:Name="EntryLevelName"  Placeholder="Level Name" WidthRequest="10" BackgroundColor="LightGray"/>
            <ScrollView BackgroundColor="White" VerticalOptions="FillAndExpand">
                <StackLayout>
                    <StackLayout x:Name="StackLayoutQuestionStack" Padding="10" />
                    <!--Things added in code-->
                </StackLayout>
            </ScrollView>
                <Button x:Name="ButtonAddQuestion" Text="Add new question" VerticalOptions="End" Clicked="ButtonAddQuestion_Clicked" CornerRadius="20" Margin="20"/>
                <Button x:Name="ButtonCreateLevel" Text="Create" Clicked="ButtonCreateLevel_Clicked" CornerRadius="20" Margin="20"/>
        </StackLayout> 

    </ContentPage.Content>
</ContentPage>