<?xml version="1.0" encoding="utf-8" ?> 
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="appFBLA2019.EditLevelPage"> 
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Editing Existing Level"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"/>
            <Picker Title="Select a Quiz to Edit" x:Name="PickerLevelSelect" SelectedIndexChanged="OnPickerSelectedIndexChanged"/>
            <Button x:Name="ButtonEditLevel" 
                    Text="{Binding Source={x:Reference PickerLevelSelect}, 
                    Path=SelectedItem, StringFormat='Edit Level: {0}'}"
                    Clicked="ButtonEditLevel_Clicked" IsEnabled="False"
                    />
            <StackLayout x:Name="StackLayoutQuestionStack" Padding="10">
                <!--Things added in code-->
            </StackLayout>
            <!-- get a list of levels created by this user. Username access has to be available for this to work-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>